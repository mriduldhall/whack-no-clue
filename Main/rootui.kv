#:kivy 2.3.0

<RootUI>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [0,0,0,150]
        Image:
            size_hint: 0.25,0.25
            color: 1,1,1,1
            source: '.\Main\sillycat.jpg'
            size: self.texture_size
            fit_mode: 'scale-down'
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: [0,20]
        BalanceFormat:
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            padding: [10,305,10,0]
            Scroll:
                GridLayout:
                    size_hint_y: None
                    row_default_height: 30
                    padding: [0,0,0,0]
                    cols:2
                    spacing:2,2
                    id: categories

<Scroll>:
    size: self.size
    effect_cls: 'DampedScrollEffect'
    scroll_timeout: 500
    bar_pos_y: 'left'
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ['content']
    rgba: (0.7,0.7,0.7,1)
    canvas.before:
        Color:
            rgba: root.rgba
        Rectangle:
            size: self.size
            pos: self.pos

<LabelFormat>:
    text:"BIG IF TRUE"

<ObtainCategories>:
    text: "awesome sauce"
    bold: True
    outline_color: (0,0,0,1)
    outline_width: 2
    rgba: (0.5,0.5,0.5,1)
    size_hint: (0.25,0.1)
    pos_hint: {'center_x':0.5, 'center_y':0.1}
    canvas.before:
        Color:
            rgba: root.rgba
        Rectangle:
            size: self.size
            pos: self.pos

<BalanceFormat>:
    text: "Current Balance: Â£%s"%app.balance
    background_color: (0.75,0,0.75,1)
    size_hint: (0.25,0.1)
    pos_hint: {'center_x':0.5, 'center_y':0.1}
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos